<div class='devise'>
  <div class='form'>
    <%= content_tag :span, nil, class: 'fa fa-key fa-3x' %>
    <h2><%= t('users.forgot_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit t('users.send_me_reset_password_instructions'), class: 'button button-small' %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
